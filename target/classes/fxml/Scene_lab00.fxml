<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Point3D?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane prefWidth="300.0" scaleShape="false" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="it.polito.tdp.lab00.FXMLController">
   <top>
      <Label alignment="CENTER" contentDisplay="CENTER" text="Portale di accesso" textAlignment="CENTER" BorderPane.alignment="CENTER">
         <font>
            <Font name="System Bold" size="28.0" />
         </font>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </Label>
   </top>
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <center>
      <VBox alignment="CENTER" prefWidth="265.0" spacing="5.0" BorderPane.alignment="CENTER">
         <children>
            <HBox alignment="CENTER" spacing="20.0">
               <children>
                  <Label alignment="CENTER" prefHeight="27.0" text="username">
                     <HBox.margin>
                        <Insets bottom="5.0" top="5.0" />
                     </HBox.margin>
                     <rotationAxis>
                        <Point3D />
                     </rotationAxis>
                     <font>
                        <Font size="12.7" />
                     </font>
                  </Label>
                  <TextField fx:id="usernameField" prefHeight="28.0" prefWidth="163.0">
                     <HBox.margin>
                        <Insets bottom="5.0" top="5.0" />
                     </HBox.margin>
                  </TextField>
               </children>
               <VBox.margin>
                  <Insets left="3.0" />
               </VBox.margin>
            </HBox>
            <HBox alignment="CENTER" spacing="20.0">
               <children>
                  <Label alignment="CENTER" text="password">
                     <HBox.margin>
                        <Insets bottom="5.0" top="5.0" />
                     </HBox.margin>
                     <rotationAxis>
                        <Point3D />
                     </rotationAxis>
                     <font>
                        <Font size="12.7" />
                     </font>
                  </Label>
                  <TextField fx:id="passwordField" prefHeight="28.0" prefWidth="163.0">
                     <HBox.margin>
                        <Insets bottom="5.0" top="5.0" />
                     </HBox.margin>
                  </TextField>
               </children>
               <VBox.margin>
                  <Insets left="3.0" />
               </VBox.margin>
            </HBox>
            <Label fx:id="textLabel" alignment="CENTER" contentDisplay="TOP" prefHeight="59.0" prefWidth="263.0" text="Inserire username e password" textAlignment="CENTER" wrapText="true">
               <VBox.margin>
                  <Insets />
               </VBox.margin>
               <font>
                  <Font name="System Italic" size="12.7" />
               </font>
               <padding>
                  <Insets left="5.0" right="5.0" />
               </padding>
            </Label>
            <Label fx:id="tentativiRimastiLabel" alignment="BOTTOM_CENTER" contentDisplay="CENTER" prefHeight="17.0" prefWidth="145.0" text="Tentativi rimasti: " textAlignment="CENTER">
               <VBox.margin>
                  <Insets bottom="3.0" left="3.0" right="3.0" />
               </VBox.margin>
               <font>
                  <Font size="12.7" />
               </font>
            </Label>
         </children>
         <BorderPane.margin>
            <Insets left="5.0" right="5.0" top="10.0" />
         </BorderPane.margin>
      </VBox>
   </center>
   <bottom>
      <HBox alignment="CENTER" fillHeight="false" prefWidth="300.0" spacing="30.0" BorderPane.alignment="CENTER">
         <children>
            <Button fx:id="clearButton" alignment="CENTER" disable="true" mnemonicParsing="false" onAction="#handleClear" prefHeight="34.0" prefWidth="83.0" text="Clear">
               <font>
                  <Font size="12.7" />
               </font>
            </Button>
            <Button fx:id="accediButton" alignment="CENTER" mnemonicParsing="false" onAction="#handleAccedi" prefHeight="34.0" prefWidth="83.0" text="Accedi">
               <font>
                  <Font size="12.7" />
               </font>
            </Button>
         </children>
         <BorderPane.margin>
            <Insets bottom="8.0" left="5.0" right="5.0" top="5.0" />
         </BorderPane.margin>
      </HBox>
   </bottom>
</BorderPane>
